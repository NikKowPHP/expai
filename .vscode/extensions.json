// .vscode/extensions.json
{
  "recommendations": [
    // --- Core Essentials ---
    "dbaeumer.vscode-eslint",       // Integrates ESLint into VS Code
    "esbenp.prettier-vscode",       // The essential Prettier formatter

    // --- Framework & Tooling Specific ---
    "prisma.prisma",                // Must-have for Prisma schema files (syntax, formatting, linting)
    "bradlc.vscode-tailwind-css",   // The official Tailwind CSS extension (IntelliSense, linting)
    "orta.vscode-jest",             // In-editor Jest testing and debugging

    // --- Quality of Life & Utilities ---
    "eamodio.gitlens",              // Supercharges Git integration
    "mikestead.dotenv",             // Syntax highlighting for .env files
    "ms-azuretools.vscode-docker",  // If you use Docker
    "EditorConfig.EditorConfig",    // Helps maintain consistent coding styles
    "yoavbls.pretty-ts-errors"      // Makes TypeScript errors much more readable
  ]
}
